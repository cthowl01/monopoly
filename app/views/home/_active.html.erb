<% @games.active.each do |game| %>
    <div class="booyah-box col-10 offset-1">
      <h1><%= game.name %></h1>
      <% if game.user.present? %>
        <small><%= game.user.email %></small>
      <% end %>
      <%= simple_form_for game, :url => game_path(game.id), :method => :get do |f| %>
        <%= f.submit 'Play', class: 'btn btn-danger' %>
      <% end %>
   </div>
  <% end %>